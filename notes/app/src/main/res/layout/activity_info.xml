        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="----NotePins----\nCreted By : Sophia Tiwari\n\nApp is useful for reminding your important work even in busy schedule through alarm notification"/>

